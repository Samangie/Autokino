<UserControl x:Class="M120_LB2_FS17.Menu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:M120_LB2_FS17"
             mc:Ignorable="d" 
             d:DesignHeight="350" d:DesignWidth="530">
    <StackPanel  x:Name="content">
        <Grid x:Name="inhalt" MinHeight="300" >

        </Grid>
        <Canvas x:Name="toolbar"  Height="50">
            <Button x:Name="showList" Canvas.Right="10" Width="100" Height="50" Content="Listview" Click="showList_Click" />
            <Button x:Name="showOverview" Canvas.Left="213" Width="100" Height="50" Content="Overview" Click="showOverview_Click" />
            <Button x:Name="addFilm" Canvas.Left="10" Width="100" Height="50" Content="Neuer Film" Click="addFilm_Click" />
        </Canvas>
    </StackPanel>
</UserControl>
