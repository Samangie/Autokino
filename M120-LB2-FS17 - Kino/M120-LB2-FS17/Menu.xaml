<UserControl x:Class="M120_LB2_FS17.Menu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:M120_LB2_FS17"
             mc:Ignorable="d" 
             d:DesignHeight="350" d:DesignWidth="530">
    <DockPanel  x:Name="content">
        <WrapPanel  x:Name="toolbar"  Height="55" DockPanel.Dock="Top" >
            <Button x:Name="showList" Canvas.Right="10" Canvas.Top="10" Margin="10 10 10 10" Width="84" Height="35" Content="Listview" Click="showList_Click" />
            <Button x:Name="showOverview" Canvas.Left="213" Canvas.Top="10" Margin="10 10 10 10" Width="84" Height="35" Content="Overview" Click="showOverview_Click" />
            <Button x:Name="addFilm" Width="84" Height="35" Content="Neuer Film" Margin="10 10 10 10" Click="addFilm_Click" />
        </WrapPanel>
        <Grid x:Name="inhaltmenu" DockPanel.Dock="Bottom">

        </Grid>
    </DockPanel>
</UserControl>
